  <style>
    body {
      font-family: sans-serif;
      background-color: #f0f8ff;
      text-align: center;
      padding: 3rem;
    }

    h1 {
      color: #007aff;
      margin-bottom: 2rem;
    }

    #result {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      color: #333;
    }

    #details {
      font-size: 1rem;
      color: #666;
    }

    .btn {
      font-size: 1rem;
      padding: 0.6rem 1.2rem;
      background-color: #007aff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 2rem;
    }
