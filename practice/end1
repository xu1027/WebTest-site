<body>

  <h1>結果発表</h1>
  <div id="result">読み込み中...</div>
  <div id="details"></div>
  <button class="btn" onclick="location.href='start1.html'">もう一度やる</button>

  <script>
    const results = JSON.parse(sessionStorage.getItem('quizResults') || '[]');

    if (results.length === 0) {
      document.getElementById('result').textContent = '結果データが見つかりません。';
    } else {
      const correctCount = results.filter(r => r.isCorrect).length;
      document.getElementById('result').textContent = `50問中 ${correctCount}問正解でした！`;

      // 詳細表示（オプション）
      let detailHTML = '<ul style="list-style:none; padding:0;">';
      results.forEach((r, i) => {
        const mark = r.isCorrect ? '◯' : '✕';
        detailHTML += `<li>第${i + 1}問：選択肢${r.selected ?? '未選択'} → ${mark}</li>`;
      });
      detailHTML += '</ul>';
      document.getElementById('details').innerHTML = detailHTML;
    }
  </script>

</body>
</html>
